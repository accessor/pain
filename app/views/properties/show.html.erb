<div class='property-show'>
  <div class='row'>
    <div class='large-12 columns'>
      <h3><%= @property.title %></h3>
				<p>
				  <b>Description:</b>
				  <%= @property.description %>
				</p>
				<p>
				  <b>Dimensions:</b>
				  <%= @property.dimensions %>
				</p>
				<p>
				  <b>Price:</b>
				  <%= @property.price %>
				</p>
				<%#= gmaps4rails(@gmap_json) %>
				<%= gmaps("markers" => {"data" => @gmap_json}, "map_options" => {"auto_zoom" => false, "zoom" => 13}) %>
				<%= link_to 'Edit', eval("edit_#{params[:type].underscore}_path(@property)") %> |
				<%= link_to 'Back', properties_path %>
    </div>
   </div>
</div>